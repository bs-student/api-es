{% extends 'base.html.twig' %}

{% block body %}
    Welcome {{ user.username }}.<br/>
    Name: {{ user.fullName }}<br/>
    Email: {{ user.email }}<br/>
    University: {{ user.getCampus().getUniversity().getUniversityName() }}, {{ user.getCampus().getCampusName() }}, {{ user.getCampus().getState().getStateName() }}, {{ user.getCampus().getState().getCountry().getCountryName() }}<br/>
    Referral Trough: {{ user.getReferral().getReferralName() }}<br/>


    <br/>
    <a href="{{ path('update_profile') }}">Edit Account</a><br/>

    {% if user.getPassword()|length %}
        <a href="{{ path('fos_user_change_password') }}">Change Password</a>
    {% endif %}
    <a href="{{ path('fos_user_security_logout') }}">Logout</a><br/>
{% endblock %}
